<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="-35dp"
        android:right="-35dp"
        android:top="0dp">

        <shape android:shape="oval">
            <size
                android:width="100dp"
                android:height="100dp" />
            <solid android:color="@color/record_selected_bottom_bg_arc_color" />
        </shape>
    </item>

    <item
        android:left="-32dp"
        android:right="-32dp"
        android:top="3dp">
        <shape android:shape="oval">
            <size
                android:width="100dp"
                android:height="100dp" />
            <gradient
                android:angle="270"
                android:endColor="@color/record_selected_bottom_bg_gradient_end_color"
                android:startColor="@color/record_selected_bottom_bg_gradient_start_color"
                android:type="linear" />
        </shape>
    </item>

    <item android:top="50dp">
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="50dp" />
            <gradient
                android:angle="270"
                android:endColor="@color/record_selected_bottom_bg_gradient_end_color"
                android:startColor="@color/record_selected_bottom_bg_gradient_center_color"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
